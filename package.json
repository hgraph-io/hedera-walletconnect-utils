{
  "name": "@hashgraph/walletconnect",
  "version": "0.0.1",
  "description": "A library to facilitate integrating Hedera with WalletConnect",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgraph-io/hedera-walletconnect-utils.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "demo:build-old": "sh ./demo/build/build.sh && sh ./demo/build/serve.sh",
    "demo:watch": "sh ./demo/build/build_watch.sh",
    "demo:serve": "sh ./demo/build/serve.sh",
    "demo:dev-old": "concurrently \"npm run demo:serve\" \"tsc -p ./tsconfig.demo.json --watch\" ",
    "test:connect": "jest --testMatch '**/DAppConnector.test.ts' --verbose",
    "prepublishOnly": "npm run build",
    "webpack:dev": "webpack-dev-server --config ./demo/webpack.config.js --mode development",
    "webpack:dev-dApp": "webpack-dev-server --config ./demo/webpack.dApp.config.js --mode development",
    "webpack:dev-wallet": "webpack-dev-server --config ./demo/webpack.wallet.config.js --mode development",
    "webpack:build-dApp": "webpack --config ./demo/webpack.dApp.config.js --mode production",
    "webpack:build-wallet": "webpack --config ./demo/webpack.wallet.config.js --mode production",
    "demo:build": "concurrently \"npm run webpack:build-dApp\" \"npm run webpack:build-wallet\"",
    "demo:dev": "concurrently \"npm run webpack:dev-dApp\" \"npm run webpack:dev-wallet\""
  },
  "author": "",
  "keywords": [
    "hedera",
    "walletconnect",
    "hashgraph"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.3",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "esbuild": "0.19.5",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.37.0",
    "@hashgraph/walletconnect": "file:./",
    "@walletconnect/modal": "^2.6.2",
    "@walletconnect/qrcode-modal": "^1.8.0",
    "@walletconnect/sign-client": "^2.10.4",
    "@walletconnect/types": "^2.10.0",
    "@walletconnect/utils": "^2.10.0",
    "@walletconnect/web3wallet": "^1.9.3",
    "buffer": "^6.0.3"
  }
}
